<%= form_for @item do |f| %>

  <div class="container" style="margin-top: 150px">
    <h4 class="text-center mb-5">Редактрирование товара</h4>
    <div class="row justify-content-center">
      <div class="col-8 col-md-4">

        <form>
          <div class="form-group">
            <%= f.text_field :item, class:"form-control text-center",
                             placeholder:"Наименование"%>
          </div>

          <div class="form-group">
            <%= f.text_field :price, class:"form-control text-center",
                                 placeholder:"Цена"%>
          </div>

          <div class="row justify-content-center">
            <%= f.submit class:"btn btn-green", value:"Обновить"%>
          </div>
        </form>

      </div>
    </div>
  </div>
<% end %>
