<%= form_for @item do |f| %>
  <div class="container" style="margin-top: 150px">
    <h4 class="text-center">Создайте новый товар</h4>
    <div class="row justify-content-center">
      <div class="col-8 col-md-4">
        <form>
          <div class="form-group">
            <%= f.text_field :item, class:"form-control text-center",
                             placeholder:"Введите товар"%>
          </div>

          <div class="form-group">
            <%= f.text_field :price, class:"form-control text-center",
                              placeholder:"Введите цену товара"%>
          </div>

          <div class="row justify-content-center">
            <%= submit_tag 'Create', class:"btn btn-dark", value:"Создать" %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>