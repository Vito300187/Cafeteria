<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p id="notice" ><%= notice %></p>
  <div class="container" style="margin-top: 150px">
  <h4 class="text-center">Для входа необходимо ввести:</h4>
  <div class="row justify-content-center">
    <div class="col-8 col-md-4">
      <form>
        <div class="form-group">
          <%= f.email_field :email, class:"form-control text-center",
                            placeholder:"Электронную почту"%>
          <small id="emailHelpLogin" class="form-text text-muted text-center">Не волнуйтесь, мы
            не делаем рассылку писем</small>
        </div>

        <div class="form-group">
          <%= f.text_field :password, class:"form-control text-center",
                               placeholder:"Пароль" %>
          <small id="emailHelpPassword" class="form-text text-muted text-center">Придумайте
            пароль 6 символов, а мы добавим соль</small>
        </div>
        <div class="row justify-content-center">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="row justify-content-center">
          <%= submit_tag 'Вход', class:"btn btn-green"%>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>