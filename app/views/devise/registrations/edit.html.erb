<%= form_for @user do |f| %>
  <p id="notice"><%= notice %></p>
  <div class="container" style="margin-top: 150px">
    <h4 class="text-center mb-5">Редактрирование профиля</h4>
    <div class="row justify-content-center">
      <div class="col-8 col-md-4">

        <form>
          <div class="form-group">
            <%= f.text_field :name, class:"form-control text-center",
                             placeholder:"Ваше имя"%>
          </div>

          <div class="form-group">
            <%= f.text_field :email, class:"form-control text-center",
                              placeholder:"Электронная почта"%>
          </div>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-6">
                <%= f.submit class:"btn btn-green", value:"Обновить"%>
              </div>
              <div class="col-6">
                <%= link_to "Вернуться", :back, class:"btn btn-dark"%>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
