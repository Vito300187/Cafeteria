<p id="notice" ><%= notice %></p>
<h1 style="text-align: center">Список всех пользователей</h1>

<!--Если пользователь не зарегестрирован, то просмотр пользователей не доступен-->
<% if user_signed_in? %>
<div class="container">
  <div class="row justify-content-center mb-3">
    <div class="col-8 col-md-2 text-center" style="font-weight: bold">Имя</div>
    <div class="col-8 col-md-2 text-center" style="font-weight: bold">Почта</div>
    <div class="col-8 col-md-2 text-center" style="font-weight: bold">Удалить?</div>
  </div>
</div>

<!--Каждый блок выводит имя, email и готовность удалить пользователя-->
<% @users.each do |user| %>
<div class="container">
  <div class="row justify-content-center mb-3">
    <div class="col-8 col-md-2 text-center"><%= link_to user.name, user, class: "edit"%></div>
    <div class="col-8 col-md-2 text-center"><%= user.email %></div>
    <div class="col-8 col-md-2 text-center"><%= link_to "Удалить", user, class: "edit",
                                                                         method: :delete, data: {
                                                                         confirm: "Вы уверены ?"} %>
    </div>
  </div>
</div>
<% end %>
<% end %>