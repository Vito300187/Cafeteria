<div class="container" style="margin-top: 150px">
  <div class="row justify-content-center">
    <div class="col-8 col-md-4">

      <% @user %>
      <h6 class="text-center">Имя пользователя:</h6>

        <% if @user.name.blank? %>
          <h3 class="text-center">Самый лучший гость <%= rand(10000) %></h3><br>
        <% else %>
          <h3 class="text-center"> <%= @user.name %></h3><br>
        <% end %>

        <h6 class="text-center">Почта:</h6>
        <h3 class="text-center"><%= @user.email %></h3>

      <!-- todo Блок проверки администратора вынести в паршил -->
      <% if @user.admin %>
        <h6 class="text-center" style="color: cornflowerblue">Пользователь администратор</h6>
      <% end %>

      <div class="container">
        <div class="row justify-content-center mt-5">
          <div class="col-12" style="text-align: center">
            <H5>Пользователь создан</H5>
            <%= @user.created_at.strftime("%d-%b-%Y") %>
          </div>
          <%= link_to "Редактировать ", edit_user_path, class:"edit" %>
          <%= link_to "Удалить", user_path, class:"edit", method: :delete, data: {
              confirm: "Вы уверены ?" }

          %>
       </div>
      </div>
    </div>
  </div>
</div>


